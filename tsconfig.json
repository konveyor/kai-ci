{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020", "DOM"],
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "types": ["node", "playwright"]
  },
  "include": ["e2e/**/*.ts", "playwright.config.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "test-output",
    "kai-evaluator",
    "kai-client-ci"
  ]
}
